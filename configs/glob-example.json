{
    "name": "glob-example",
    "n_gpu": 1,
    "wandb": {
        "use": true,
        "init_args": {
            "project": "your project name",
            "name": "your run name"
        }
    },

    "arch": {
        "type": "efficientnet",
        "args": {
            "model_name": "efficientnet-b0",
            "num_classes": 18
        }
    },
    "data_loader": {
        "type": "MaskDataLoader",
        "args":{
            "data_dir": "/opt/ml/input/data/train/images",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "dataset": "glob"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CE_loss",
        "args": {}
    },
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 30,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
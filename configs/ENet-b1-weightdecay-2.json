{
    "name": "ENet-b1-weight-decay-2",
    "n_gpu": 1,
    "wandb": {
        "use": true,
        "init_args": {
            "project": "KH",
            "name": "ENet-b1-weight-decay-2"
        }
    },

    "arch": {
        "type": "efficientnet",
        "args": {
            "model_name": "efficientnet-b1",
            "num_classes": 18
        }
    },
    "data_loader": {
        "type": "MaskSplitLoader",
        "args":{
            "data_dir": "/opt/ml/input/60HFRotate45",
            "batch_size": 240,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 2,
            "amsgrad": true
        }
    },
    "loss": "CE_loss",
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 90,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}